{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "plugins": [
        "jest"
    ],
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-unused-vars": [
            1,
            {
                "vars": "local"
            }
        ],
        "indent": [
            1,
            4
        ],
        "brace-style": [
            1,
            "stroustrup",
            {
                "allowSingleLine": true
            }
        ],
        "arrow-spacing": [
            "warn",
            {
                "before": true,
                "after": true
            }
        ],
        "no-var": [
            "warn"
        ],
        "comma-style": [
            "off",
            null,
            {
                "exceptions": {}
            }
        ],
        "func-call-spacing": [
            "warn",
            "never"
        ]
    }
}